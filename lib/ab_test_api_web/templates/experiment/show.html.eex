<h1>Show Experiment key:<%= @experiment.key %></h1>

<span><%= link "Back", to: Routes.experiment_path(@conn, :index) %></span>

<section class="row">
  <%= for option <- @experiment.options do %>
    <article class="column">
      <h2>Option value: <%= option.value %></h2>
      <h4>percentage: <%= option.percentage %></h4>
      <h4>devices count: <%= option.devices_count %></h4>
      <h4>Devices:</h4>
      <ul>
        <%= for device <- option.devices do %>
          <li><%= device.token %></li>
        <% end %>
      </ul>
    </article>
  <% end %>
</section>

